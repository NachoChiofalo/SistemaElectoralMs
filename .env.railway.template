# Variables de entorno para deployment en Railway

# ===================== GLOBAL SETTINGS =====================
NODE_ENV=production
TZ=America/Argentina/Buenos_Aires

# ===================== AUTH SERVICE =====================
# Port
AUTH_PORT=3002

# JWT Configuration  
JWT_SECRET=your_super_secure_jwt_secret_change_in_production
JWT_EXPIRE=24h
REFRESH_EXPIRE=7d

# Database (Railway PostgreSQL)
# Estas variables serán reemplazadas automáticamente por Railway
DB_HOST=${{ POSTGRES.PGHOST }}
DB_PORT=${{ POSTGRES.PGPORT }}
DB_NAME=${{ POSTGRES.PGDATABASE }}
DB_USER=${{ POSTGRES.PGUSER }}
DB_PASSWORD=${{ POSTGRES.PGPASSWORD }}

# ===================== GATEWAY SERVICE =====================
# Port
GATEWAY_PORT=8080

# Services URLs (Railway Internal URLs)
AUTH_SERVICE_URL=${{ AUTH_SERVICE.RAILWAY_PRIVATE_DOMAIN }}
PADRON_SERVICE_URL=${{ PADRON_SERVICE.RAILWAY_PRIVATE_DOMAIN }}

# Frontend URL (Railway Public URL)
FRONTEND_URL=${{ WEB_ADMIN.RAILWAY_PUBLIC_DOMAIN }}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================== PADRON SERVICE =====================  
# Port
PADRON_PORT=3001

# Database (Railway PostgreSQL) - Same as Auth Service
PADRON_DB_HOST=${{ POSTGRES.PGHOST }}
PADRON_DB_PORT=${{ POSTGRES.PGPORT }}
PADRON_DB_NAME=${{ POSTGRES.PGDATABASE }}
PADRON_DB_USER=${{ POSTGRES.PGUSER }}
PADRON_DB_PASSWORD=${{ POSTGRES.PGPASSWORD }}

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ===================== WEB ADMIN CLIENT =====================
# Port  
WEB_PORT=3000

# API Gateway URL (Railway Public URL)
API_URL=${{ GATEWAY_SERVICE.RAILWAY_PUBLIC_DOMAIN }}

# ===================== REDIS (OPTIONAL) =====================
# Redis Configuration (Railway Redis)
REDIS_URL=${{ REDIS.REDIS_URL }}
REDIS_HOST=${{ REDIS.REDIS_HOST }}  
REDIS_PORT=${{ REDIS.REDIS_PORT }}
REDIS_PASSWORD=${{ REDIS.REDIS_PASSWORD }}

# ===================== MONITORING & HEALTH =====================
# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined